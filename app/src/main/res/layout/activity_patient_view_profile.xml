<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9F9"
    android:backgroundTint="#E1E1E1"
    tools:ignore="Overdraw,UnusedResources">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarPaciente"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:backgroundTint="#2187B5"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/Titulo"
        android:textColor="#F6F0F0"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/toolbarPaciente"
        app:layout_constraintStart_toStartOf="@+id/toolbarPaciente"
        app:layout_constraintTop_toTopOf="@+id/toolbarPaciente" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarOpciones"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/ibInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:background="#FFFFFF"
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toStartOf="@+id/ibNotificaciones"
        app:layout_constraintStart_toStartOf="@+id/toolbarOpciones"
        app:layout_constraintTop_toTopOf="@+id/toolbarOpciones"
        app:srcCompat="@drawable/btn_inicio"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/ibNotificaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="-70dp"
        android:background="#FFFFFF"
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toStartOf="@+id/ibPerfil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbarOpciones"
        app:srcCompat="@drawable/btn_notificaciones"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/ibPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="-200dp"
        android:background="#EFEAEA"
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toStartOf="@+id/ibAjustes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbarOpciones"
        app:srcCompat="@drawable/btn_perfil"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,ImageContrastCheck" />

    <ImageButton
        android:id="@+id/ibAjustes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="-300dp"
        android:background="#EDE9E9"
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toEndOf="@+id/toolbarOpciones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbarOpciones"
        app:srcCompat="@drawable/btn_ajustes"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/tvBtnInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="290dp"
        android:text="@string/inicio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/toolbarOpciones"
        app:layout_constraintTop_toBottomOf="@+id/ibInicio" />

    <TextView
        android:id="@+id/tvBtnNotificaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="85dp"
        android:text="@string/notificaciones"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/toolbarOpciones"
        app:layout_constraintTop_toBottomOf="@+id/ibNotificaciones" />

    <TextView
        android:id="@+id/tvBtnPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="-130dp"
        android:text="@string/perfil"
        app:layout_constraintEnd_toEndOf="@+id/toolbarOpciones"
        app:layout_constraintStart_toStartOf="@+id/toolbarOpciones"
        app:layout_constraintTop_toBottomOf="@+id/ibPerfil" />

    <TextView
        android:id="@+id/tvBotonAjustes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="-300dp"
        android:text="@string/ajustes"
        app:layout_constraintEnd_toEndOf="@+id/toolbarOpciones"
        app:layout_constraintStart_toStartOf="@+id/toolbarOpciones"
        app:layout_constraintTop_toBottomOf="@+id/ibAjustes" />

    <ImageButton
        android:id="@+id/ibMenuTresRayas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="#F4ECEC"
        android:backgroundTint="#2187B5"
        android:importantForAccessibility="no"
        android:outlineAmbientShadowColor="#03A9F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu__1_"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,ImageContrastCheck" />

    <ImageButton
        android:id="@+id/ibBackWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="#2187B5"
        android:importantForAccessibility="no"
        app:layout_constraintStart_toStartOf="@+id/toolbarPaciente"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_white"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btInfoGeneralEnPerfil"
        android:layout_width="340dp"
        android:layout_height="144dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#FAF6F6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarPaciente"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btHMedicoEnPerfil"
        android:layout_width="340dp"
        android:layout_height="90dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#FAF6F6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btInfoGeneralEnPerfil"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnInfoPersonalEnPerfil"
        android:layout_width="340dp"
        android:layout_height="90dp"
        android:layout_marginTop="6dp"
        android:backgroundTint="#FAF6F6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btHMedicoEnPerfil"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnRestablecerContraEnPerfil"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginTop="6dp"
        android:backgroundTint="#FAF6F6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnInfoPersonalEnPerfil"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnCerrarSesionEnPerfil"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginTop="6dp"
        android:backgroundTint="#FAF6F6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRestablecerContraEnPerfil"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/tvNombre"
        android:layout_width="129dp"
        android:layout_height="21dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:textAlignment="viewStart"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ivFoto"
        app:layout_constraintTop_toBottomOf="@+id/toolbarPaciente"
        tools:ignore="TextSizeCheck"
        tools:text="Mario Mauricio" />

    <ImageView
        android:id="@+id/ivFecha"
        android:layout_width="25dp"
        android:layout_height="21dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="60dp"
        android:background="#2196F3"
        android:importantForAccessibility="no"
        android:outlineAmbientShadowColor="#03A9F4"
        android:outlineSpotShadowColor="#00BCD4"
        app:layout_constraintStart_toEndOf="@+id/ivFoto"
        app:layout_constraintTop_toTopOf="@+id/ivFoto"
        app:srcCompat="@android:drawable/ic_menu_my_calendar"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/tvFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/ivFecha"
        app:layout_constraintTop_toBottomOf="@+id/tvApellido"
        tools:ignore="SmallSp"
        tools:text="01/01/1984" />

    <TextView
        android:id="@+id/tvTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="15dp"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/ivTelefono"
        app:layout_constraintTop_toBottomOf="@+id/tvFecha"
        tools:ignore="SmallSp"
        tools:text="987 654 321" />

    <ImageButton
        android:id="@+id/ibEdit"
        android:layout_width="24dp"
        android:layout_height="34dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:background="#03A9F4"
        android:importantForAccessibility="no"
        app:layout_constraintStart_toEndOf="@+id/tvNombre"
        app:layout_constraintTop_toBottomOf="@+id/toolbarPaciente"
        app:srcCompat="@android:drawable/ic_menu_edit"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck,ImageContrastCheck" />

    <ImageView
        android:id="@+id/ivTelefono"
        android:layout_width="26dp"
        android:layout_height="18dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="10dp"
        android:background="#03A9F4"
        android:importantForAccessibility="no"
        app:layout_constraintStart_toEndOf="@+id/ivFoto"
        app:layout_constraintTop_toBottomOf="@+id/ivFecha"
        app:srcCompat="@android:drawable/ic_menu_call"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/ivHMedicoVerPerfil"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="22dp"
        android:background="#03A9F4"
        android:importantForAccessibility="no"
        app:layout_constraintStart_toStartOf="@+id/btHMedicoEnPerfil"
        app:layout_constraintTop_toTopOf="@+id/btHMedicoEnPerfil"
        app:srcCompat="@android:drawable/ic_dialog_info"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/tvHMedicoVerPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="@string/historialMedico"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ivHMedicoVerPerfil"
        app:layout_constraintTop_toTopOf="@+id/btHMedicoEnPerfil" />

    <TextView
        android:id="@+id/tvHMedicoInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="15dp"
        android:text="@string/HMedicoInfo"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/btHMedicoEnPerfil"
        app:layout_constraintTop_toBottomOf="@+id/tvHMedicoVerPerfil" />

    <Button
        android:id="@+id/btLeerHMedico"
        android:layout_width="106dp"
        android:layout_height="38dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#03A9F4"
        android:text="@string/leer"
        android:textColor="#4A148C"
        app:icon="@android:drawable/ic_menu_send"
        app:iconPadding="4dp"
        app:layout_constraintStart_toEndOf="@+id/tvHMedicoVerPerfil"
        app:layout_constraintTop_toTopOf="@+id/btHMedicoEnPerfil"
        tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />

    <ImageView
        android:id="@+id/ivInfoPersonal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="25dp"
        android:background="#03A9F4"
        android:backgroundTint="#03A9F4"
        android:importantForAccessibility="no"
        app:layout_constraintStart_toStartOf="@+id/btnInfoPersonalEnPerfil"
        app:layout_constraintTop_toBottomOf="@+id/btHMedicoEnPerfil"
        app:srcCompat="@android:drawable/sym_contact_card"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/tvInfoPersonal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="17dp"
        android:text="@string/informacionPersonal"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ivInfoPersonal"
        app:layout_constraintTop_toTopOf="@+id/btnInfoPersonalEnPerfil" />

    <TextView
        android:id="@+id/tvInfoPersonalInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="15dp"
        android:text="@string/editarinfo"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/btnInfoPersonalEnPerfil"
        app:layout_constraintTop_toBottomOf="@+id/tvInfoPersonal" />

    <Button
        android:id="@+id/btLeerInfoPersonal"
        android:layout_width="106dp"
        android:layout_height="38dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#03A9F4"
        android:text="@string/leerInfo"
        android:textColor="#4A148C"
        app:icon="@android:drawable/ic_menu_send"
        app:iconPadding="4dp"
        app:layout_constraintStart_toEndOf="@+id/tvInfoPersonal"
        app:layout_constraintTop_toTopOf="@+id/btnInfoPersonalEnPerfil"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/ivRestablecerContra"
        android:layout_width="19dp"
        android:layout_height="21dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:background="#FDFBFB"
        android:backgroundTint="#FFFFFF"
        android:contentDescription="@string/imgRestablecerContra"
        app:layout_constraintStart_toStartOf="@+id/btnRestablecerContraEnPerfil"
        app:layout_constraintTop_toBottomOf="@+id/btnInfoPersonalEnPerfil"
        app:srcCompat="@drawable/candado" />

    <ImageView
        android:id="@+id/ivCerrarSesión"
        android:layout_width="20dp"
        android:layout_height="24dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:importantForAccessibility="no"
        app:layout_constraintStart_toStartOf="@+id/btnCerrarSesionEnPerfil"
        app:layout_constraintTop_toTopOf="@+id/btnCerrarSesionEnPerfil"
        app:srcCompat="@drawable/cerrar_sesion"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/tvRestablecerContra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/restablecerContraseña"
        app:layout_constraintStart_toEndOf="@+id/ivRestablecerContra"
        app:layout_constraintTop_toTopOf="@+id/btnRestablecerContraEnPerfil" />

    <TextView
        android:id="@+id/tvCerrarSesión"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/cerrarSesion"
        app:layout_constraintStart_toEndOf="@+id/ivCerrarSesión"
        app:layout_constraintTop_toTopOf="@+id/btnCerrarSesionEnPerfil" />

    <ImageButton
        android:id="@+id/ibCerrarSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="15dp"
        android:background="#FAF6F6"
        android:backgroundTint="#FAF6F6"
        android:importantForAccessibility="no"
        app:layout_constraintStart_toEndOf="@+id/tvRestablecerContra"
        app:layout_constraintTop_toTopOf="@+id/btnRestablecerContraEnPerfil"
        app:srcCompat="@drawable/flechaa_derecha"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/ivFoto"
        android:layout_width="75dp"
        android:layout_height="120dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/btInfoGeneralEnPerfil"
        app:layout_constraintTop_toBottomOf="@+id/toolbarPaciente"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tvApellido"
        android:layout_width="129dp"
        android:layout_height="21dp"
        android:layout_marginStart="8dp"
        android:textAlignment="viewStart"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ivFoto"
        app:layout_constraintTop_toBottomOf="@+id/tvNombre"
        tools:text="Jimenez Mendoza" />

</androidx.constraintlayout.widget.ConstraintLayout>