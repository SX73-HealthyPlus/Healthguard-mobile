<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvClientes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="#F3F3F3"
    android:backgroundTint="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#FBF4F4"
        tools:ignore="ExtraText">

        <TextView
            android:id="@+id/tvNombreDoctor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="136dp"
            android:textAlignment="viewStart"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/ivDoctores"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Efraín Casas Mejía " />

        <TextView
            android:id="@+id/tvEspecializacionDoctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/ivDoctores"
            app:layout_constraintTop_toBottomOf="@+id/tvNombreDoctor"
            tools:text="Médico General" />

        <ImageView
            android:id="@+id/ivDoctores"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_launcher_background" />

        <ImageView
            android:id="@+id/ivCalificacion"
            android:layout_width="24dp"
            android:layout_height="28dp"
            android:layout_marginTop="14dp"
            app:layout_constraintStart_toEndOf="@+id/tvEspecializacionDoctor"
            app:layout_constraintTop_toBottomOf="@+id/tvNombreDoctor"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <TextView
            android:id="@+id/tvCalificacionDoctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="33dp"
            android:textAlignment="viewStart"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivCalificacion"
            app:layout_constraintTop_toBottomOf="@+id/tvNombreDoctor"
            tools:text="3.0" />

        <ImageView
            android:id="@+id/ivSacarCitaButton"
            android:layout_width="93dp"
            android:layout_height="106dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toEndOf="@+id/tvNombreDoctor"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/sacar_cita_button" />

        <TextView
            android:id="@+id/tvPrecioPorCita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="7dp"
            android:textStyle="italic"
            app:layout_constraintStart_toEndOf="@+id/ivDoctores"
            app:layout_constraintTop_toBottomOf="@+id/tvEspecializacionDoctor"
            tools:text="S/ 100.00" /><![CDATA[

         />

    ]]>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>